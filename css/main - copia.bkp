/* Estilos a Formularios  */

label, input{
    font-size: 1.0vw;
    padding-left:10px;
}
input[type=text],input[type=password],
input[type=email],
input[type=number],input[type=url],
input[type=tel],
input[type=textarea], select{
    width: 80%;
    padding: 1vw;   /* 12px 20px; */
    margin: 1vw;    /* 8px 0; */
    display: inline-block;
    border: 1vw;    /* ipx solid #ccc; */
    border-radius: 4px;
    box-sizing: border-box;

}

input[type=radio],input[type=checkbox],input[type=date] {
    /* width: 80%; */
    padding: 1vw;
    margin: 1vw;  
    display: inline-block;
    box-sizing: border-box;
}


input[type=submit],input[type=reset] {
    width: 49.5%;
    background-color: #4caf50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

input[type=submit]:hover,
input[type=reset]:hover {
    background-color: #4caf49;
}

.formulario{
    border-radius: 5px;
    background-color: #f2f2f2;
    padding: 2%;
    margin: 1% 20%;
}

textarea{
    width: 60%;
}
