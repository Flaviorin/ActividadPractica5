
*{
    margin: 0;
    padding: 0;
    font-family: Verdana, Verdana, Geneva, Tahoma, sans-serif;
}

h1{
    text-align: center;
    font-size: 3vw;

}
header{
    background-color: black;
    color: white;
    width: 100%;
    /* left: 0; */
}
.nav{
    background-color: gray;
    color: white;
    /* Le da forma a la caja que los contiene a los links */
    border-radius: 5px;
    margin: 0.3%; /* 5px */
    padding: 0.3%; /* 5px */
    /* text-decoration: none = es para saca la barrita de subrayado de los links 
    de la barra de navegacion */
    text-decoration: none;
    font-size: 1.5vw;
}
footer{
    background-color: black;
    text-align: center;
    color: white;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 20px;
    height: 50px;
    font-size: 20px;
    margin-top: 0;  /* 10px */
}

/* redes socuales */

.redsoc{
    color: white;
    font-size: 1.5vw;
    text-align: center;   /* centrar los iconos */
}

.redsoc a {
    color: #000000;   /* color de los iconos */
    margin: 0px 6px;    /* espacio entre los iconos */
    font-size: 2vw;     /* 20px tama√±o */
}

.redsoc a:hover {
    color: #999999;   /* Color de los iconos al pasar el raton */
}

